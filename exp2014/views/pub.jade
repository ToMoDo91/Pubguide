extends layout

block content
    #wrapper
      header
        h1 Bergen Pubguide
      #hoved
        #nav-bar
          a(href='/') Hjem
          a(href='pubListe') Pub
          a(href='') Om
          a(href='') Kontakt
          #sok
            p Søk etter en bar i Bergen
            form(method='get', action='pubSok')
              input(type='text', name='sok')



        br
        #hovedinnhold(onload='initialize()')
          #pub-content
            h1 #{pu.pub}
            div(class='rateit bigstars', id='rate')
            -var average
            -var rating = pu.rate;
            -var votes = pu.votes;
            -average = (rating / votes);
            -if (isNaN(pu.votes))
              -average = 0;
              -rating = 0;
              -votes = 0;

            -average = parseFloat(average).toFixed(2);
            p= pu.votes
            p= pu.rate
            p(id='counter') Antall stemmer: #{rating}
            p(id='votesOf') #{average} / 5.00
            p Aldersgrense: #{pu.alder}
            p Åpningstider: #{pu.apning}
            p Gate/adresse: #{pu.adresse}
            input(id='addresse', type='hidden', value= '#{pu.adresse}')
            p Type: #{pu.type}
            p Tlf: #{pu.tlf}
            p Mail: #{pu.mail}
            p Kleskode: #{pu.kles}
            p Inngangspris: #{pu.inngang}
            p Diverse: #{pu.dive}
            p Hjemmeside:
              a(href='#{pu.hjemme}') #{pu.hjemme}
            iframe(width="600", height="450", frameborder="0", style="border:0", src="https://www.google.com/maps/embed/v1/place?q=Ad%20fontes%20norge&key=AIzaSyBQSaZK116hCjXPtvUbMFT3M4A-eHbX8hU")
            #panel
              input(id="address" type="textbox" value="Sydney, NSW")
              input(type="button" value="Geocode" onclick="codeAddress()")

            #map-canvas

          br
          #disqus_thread
            script(type='text/javascript').
              /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
              var disqus_shortname = 'pubguide'; // required: replace example with your forum shortname
              /* * * DON'T EDIT BELOW THIS LINE * * */
              (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
              })();
            noscript
              | Please enable JavaScript to view the
              a(href='http://disqus.com/?ref_noscript') comments powered by Disqus.
